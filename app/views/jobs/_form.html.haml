= form_for @job do |f|
  -if @job.errors.any?
    %h2= pluralize(@job.errors.count, 'error')
    %ul
      - @job.errors.full_messages.each do |msg|
        %li= msg
  = f.collection_select :category_id, Category.all, :id, :name, { promt: 'Choose a category'}
  %p
    = f.label :title
    = f.text_field :title
  %p
    = f.label :description
    = f.text_area :description
  %p
    = f.label :company
    = f.text_field :company
  %p
    = f.label :url
    = f.text_field :url
  %p= f.submit